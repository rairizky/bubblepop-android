<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/listCartImageMenu"
                        tools:src="@drawable/dummy_menu"
                        android:scaleType="centerCrop"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        tools:text="Bubble Strawberry"
                        android:id="@+id/listCartNameMenu"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textColor="@color/colorMatte"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Size : "
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            tools:text="L"
                            android:textSize="14sp"
                            android:id="@+id/listCartSize"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="|"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Harga : "
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            tools:text="20000"
                            android:textSize="14sp"
                            android:id="@+id/listCartPrice"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/listCartEdit"
                        app:tint="@android:color/darker_gray"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/listCartDelete"
                        app:tint="@android:color/darker_gray"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_baseline_delete_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/listCartMinButton"
                        android:layout_gravity="center"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp">
                        <RelativeLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp">
                            <ImageView
                                app:tint="@color/colorWhite"
                                android:src="@drawable/ic_baseline_remove_24"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <EditText
                        android:text="2"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/listCartMount"
                        android:textSize="14sp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/listCartPlusButton"
                        android:layout_gravity="center"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp">
                        <RelativeLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp">
                            <ImageView
                                app:tint="@color/colorWhite"
                                android:src="@drawable/ic_baseline_add_24"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>