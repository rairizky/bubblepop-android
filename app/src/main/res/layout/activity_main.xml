<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/headerMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerHeaderMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:visibility="gone">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="264dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/placeholder_shape_dark" />
                </com.facebook.shimmer.ShimmerFrameLayout>
                <RelativeLayout
                    android:id="@+id/ivHeaderMenuLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivHeaderMenu"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/ivHeaderMenuOpacity"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:src="@drawable/image_to_dark" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:paddingBottom="48dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp">
                    <TextView
                        android:id="@+id/tvHeaderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="28sp"
                        tools:text="Bubble Choco" />
                    <TextView
                        android:id="@+id/tvHeaderPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        tools:text="Harga mulai dari Rp. 17.000" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@id/headerMenu"
                android:layout_marginTop="-24dp"
                android:background="@drawable/layout_top_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/app_name"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="24sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorMatte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/btnSearch"
                                android:padding="4dp"
                                android:background="@drawable/layout_btn_icon_light"
                                app:tint="@color/colorWhite"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_baseline_search_24"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/layoutBtnTransaction"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="8dp"
                            app:cardCornerRadius="8dp">
                            <ImageView
                                android:id="@+id/btnTransaction"
                                android:padding="4dp"
                                android:background="@drawable/layout_btn_icon_light"
                                app:tint="@color/colorWhite"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_baseline_confirmation_number_24"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="8dp"
                            app:cardCornerRadius="8dp">
                            <ImageView
                                android:id="@+id/btnProfile"
                                android:padding="4dp"
                                android:background="@drawable/layout_btn_icon_light"
                                app:tint="@color/colorWhite"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_baseline_person_24"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerPromo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:background="@drawable/placeholder_shape_dark" />
                    </com.facebook.shimmer.ShimmerFrameLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/layoutPromo"
                        android:elevation="0dp"
                        app:cardCornerRadius="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                            android:id="@+id/carouselPromo"
                            app:showTopShadow="false"
                            app:bottomShadowAlpha="0.2"
                            app:carouselType="BLOCK"
                            app:carouselBackground="@color/colorWhite"
                            app:showNavigationButtons="false"
                            app:autoPlay="true"
                            app:autoPlayDelay="4500"
                            app:showIndicator="true"
                            android:layout_width="match_parent"
                            android:layout_height="190dp"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <GridLayout
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:rowCount="2"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1">
                                <TextView
                                    android:text="Menu Terbaru"
                                    android:textSize="16sp"
                                    android:layout_gravity="left|center"
                                    android:paddingBottom="1dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/colorMatte"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </FrameLayout>
                            <FrameLayout
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1">
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnAllMenu"
                                    android:text="Lihat Menu"
                                    android:layout_gravity="end"
                                    android:insetRight="0dp"
                                    android:insetLeft="0dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.Button.TextButton" />
                            </FrameLayout>
                        </GridLayout>
                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/shimmerSelectedMenu"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginLeft="24dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <View
                                    android:background="@drawable/placeholder_shape_dark"
                                    android:layout_width="144dp"
                                    android:layout_height="150dp"/>
                                <View
                                    android:background="@drawable/placeholder_shape_dark"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"/>
                                <View
                                    android:background="@drawable/placeholder_shape_dark"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"/>
                            </LinearLayout>
                        </com.facebook.shimmer.ShimmerFrameLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSelectedMenu"
                            android:layout_marginLeft="-30dp"
                            tools:listitem="@layout/item_selected_menu"
                            android:clipChildren="false"
                            android:overScrollMode="never"
                            app:layoutManager="com.ramotion.cardslider.CardSliderLayoutManager"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>