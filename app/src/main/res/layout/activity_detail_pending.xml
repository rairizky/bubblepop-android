<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPendingActivity">
    <LinearLayout
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:paddingTop="24dp"
            android:paddingLeft="6dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnToMainFromDetailPending"
                android:text="Back"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
                android:drawableTint="@color/colorPrimaryDark"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@android:color/darker_gray"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_margin="4dp"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp">
            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/detailPendingQR"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="-10dp"
                    tools:src="@drawable/qr_code"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_width="250dp"
                    android:layout_height="250dp"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="NO TRANSAKSI"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/detailPendingNoTransaksi"
                        tools:text="113"
                        android:layout_gravity="center"
                        android:textSize="19sp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="TOTAL"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/detailPendingTotalPrice"
                        tools:text="94000"
                        android:layout_gravity="center"
                        android:textSize="19sp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDetailPending"
            android:paddingTop="16dp"
            tools:listitem="@layout/item_list_transaction_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>