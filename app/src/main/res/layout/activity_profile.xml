<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite">
        <RelativeLayout
            android:paddingTop="8dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingBottom="32dp"
            android:background="@drawable/bg_gradient_light"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnToMainFromProfile"
                android:text="Back"
                android:textColor="@color/colorWhite"
                android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
                android:drawableTint="@color/colorWhite"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnLogout"
                android:layout_alignParentRight="true"
                android:text="Logout"
                android:textColor="@color/colorWhite"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/layout_top_radius"
            android:paddingTop="24dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:layout_marginTop="-24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/pattern_card"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:src="@color/colorMatteOpacity"
                        android:alpha="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:padding="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_alignParentTop="true"
                            android:src="@drawable/logo_bubblepop"
                            android:layout_width="80dp"
                            android:layout_height="40dp"/>
                        <LinearLayout
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="Member"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/etMemberName"
                                tools:text="Rafli Rai Rizky"
                                android:textSize="20sp"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_marginTop="-6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/ic_baseline_fiber_smart_record_24"
                        app:tint="@android:color/darker_gray"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                    <TextView
                        android:id="@+id/totalPoinUser"
                        android:text="0"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Poin"
                        android:layout_marginLeft="4dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTukarPoin"
                        android:text="TUKAR POIN"
                        android:layout_gravity="end"
                        android:insetRight="0dp"
                        android:insetLeft="0dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tlProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vpProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>