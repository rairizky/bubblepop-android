<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">
        <RelativeLayout
            android:paddingTop="8dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingBottom="32dp"
            android:background="@drawable/bg_gradient_light"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnToMainFromProfile"
                android:text="Back"
                android:textColor="@color/colorWhite"
                android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
                android:drawableTint="@color/colorWhite"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnLogout"
                android:layout_alignParentRight="true"
                android:text="Logout"
                android:textColor="@color/colorWhite"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/layout_top_radius"
            android:padding="24dp"
            android:layout_marginTop="-24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <RelativeLayout
                    android:padding="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:src="@drawable/logo_bubblepop"
                        android:layout_width="80dp"
                        android:layout_height="40dp"/>
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="Member"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/etMemberName"
                            tools:text="Rafli Rai Rizky"
                            android:textSize="20sp"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginTop="-5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <GridLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2">
                <FrameLayout
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                </FrameLayout>
                <FrameLayout
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">

                </FrameLayout>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>