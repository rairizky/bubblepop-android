<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    tools:context=".DetailMenuActivity">
    <androidx.cardview.widget.CardView
        app:cardElevation="16dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
                android:drawableTint="@color/colorPrimaryDark"
                android:padding="12dp"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginRight="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="48dp"
                android:layout_height="56dp"/>
            <Button
                android:text="Tambah ke keranjang"

                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/headerDetailMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerHeaderDetailMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:visibility="gone">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="264dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/placeholder_shape_dark" />
                </com.facebook.shimmer.ShimmerFrameLayout>
                <RelativeLayout
                    android:id="@+id/ivHeaderDetailMenuLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivHeaderDetailMenu"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/ivHeaderDetailMenuOpacity"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:src="@drawable/image_to_dark" />
                </RelativeLayout>
                <Button
                    android:id="@+id/btnToMainFromDetailMenu"
                    android:text="Back"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="14dp"
                    android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
                    android:drawableTint="@color/colorWhite"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@id/headerDetailMenu"
                android:layout_marginTop="-24dp"
                android:paddingTop="24dp"
                android:paddingRight="24dp"
                android:paddingLeft="24dp"
                android:paddingBottom="74dp"
                android:background="@drawable/layout_top_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvNameDetailMenu"
                    tools:text="Bubble Strawberry"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="24sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorMatte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:background="@drawable/bg_border_dark"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Jumlah"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_gravity="center"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/btnDecreaseCounterMenu"
                                    android:padding="4dp"
                                    android:background="@drawable/layout_btn_icon_light"
                                    app:tint="@color/colorWhite"
                                    android:clickable="true"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                            </androidx.cardview.widget.CardView>
                            <EditText
                                android:text="0"
                                android:fontFamily="@font/poppins_medium"
                                android:textAlignment="center"
                                android:minLines="1"
                                android:inputType="number"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"/>
                            <androidx.cardview.widget.CardView
                                android:layout_gravity="center"
                                app:cardElevation="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp">
                                <ImageView
                                    android:id="@+id/btnIncreaseCounterMenu"
                                    android:padding="4dp"
                                    android:background="@drawable/layout_btn_icon_light"
                                    app:tint="@color/colorWhite"
                                    android:clickable="true"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:text="Total Rp. "
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/totalPriceMenu"
                                tools:text="60000"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:text="Deskripsi"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvDescriptionDetailMenu"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    tools:text="@string/lorem_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>